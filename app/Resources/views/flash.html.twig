{# Used for back and front #}
{% for type, messages in app.session.flashbag.all() %}
    {% for message in messages %}
        <div data-position="top" class="pgn-wrapper {% if class is defined %}{{ class }}{% endif %}">
            <div class="pgn pgn-bar">
                <div class="alert alert-{{ type }}">
                    <button data-dismiss="alert" class="close" type="button"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
                    <span>{{ message }}</span>
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}


