<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="crm.display_role_icon_extension" class="Welcomango\Bundle\Admin\CrmBundle\Twig\DisplayRoleIconExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="welcomango.form.user.type" class="Welcomango\Bundle\Admin\CrmBundle\Form\Type\UserType">
            <argument type="service" id="security.context" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="welcomango.form.language.type" class="Welcomango\Bundle\Admin\CrmBundle\Form\Type\LanguageType">
        </service>

        <service id="welcomango.form.user.filter" class="Welcomango\Bundle\Admin\CrmBundle\Form\Type\UserFilterType">
        </service>
    </services>

</container>
