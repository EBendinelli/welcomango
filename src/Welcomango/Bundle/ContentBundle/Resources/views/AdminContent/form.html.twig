<div class="col-md-12">
    <div class="panel panel-default portlet">
        <div class="panel-body">
            {{ form_start(form, {'action': save_path, 'attr': {'id': 'tagForm'}}) }}
            {{ form_errors(form) }}
            <ul class="nav nav-tabs nav-tabs-fillup">
                <li class="active"><a data-toggle="tab" href="#general"><span>{{ "tag.informations.tab"|trans }}</span></a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active slide-left" id="general">
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_row(form.title) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.author) }}
                        </div>
                        <div class="col-sm-6">
                            {{ form_row(form.banner) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 m-b-10">
                            {{ form_row(form.content) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            {{ form_row(form.publication_status) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_row(form.category) }}
                        </div>
                        <div class="col-sm-4">
                            {{ form_row(form.portrayed_user) }}
                        </div>
                    </div>
                    <div class="tab-pane slide-left" id="credentials">
                        <div class="col-md-8">
                            {#                                {{ form_row(form.roles, { 'label_helper' :  'user.helper.role'|trans }) }}
                                                            {{ form_row(form.enabled) }}#}
                        </div>
                    </div>
                    <div class="tab-pane slide-left" id="password">
                        <div class="col-md-8">
                            {#                                {{ form_row(form.plainPassword.first) }}
                                                            {{ form_row(form.plainPassword.second) }}#}
                        </div>
                    </div>
                </div>
                {% include "WelcomangoCoreBundle:Form:formFooter.html.twig" with {listing : listing, update: true } only %}
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

{% block javascripts %}
    {{ tinymce_init() }}
{% endblock %}
