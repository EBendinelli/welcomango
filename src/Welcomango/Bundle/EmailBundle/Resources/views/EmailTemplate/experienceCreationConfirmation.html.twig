{% trans_default_domain 'email' %}

{% extends "WelcomangoEmailBundle:EmailTemplate:template.html.twig" %}

{% trans_default_domain 'interface' %}

{% block subject %}
    {% autoescape false %}
    {{ 'email.experience.creation.subject'|trans }}
    {% endautoescape %}
{% endblock %}

{% block mainTitle %}
    {% autoescape false %}
    {{ 'global.experience'|trans }}
    {% endautoescape %}
{% endblock %}

{% block coreTitle %}
    {% autoescape false %}
    {{ 'email.experience.creation.coreTitle'|trans }}
    {% endautoescape %}
{% endblock %}

{% block subTitle %}
    {% autoescape false %}
    {{ 'email.experience.creation.subTitle'|trans({'%user%': name}) }}
    {% endautoescape %}
{% endblock %}

{% block message %}
    {% autoescape false %}
    {{ 'email.experience.creation.message' }}
    {% endautoescape %}
{% endblock %}



