{% trans_default_domain 'email' %}

{% extends "WelcomangoEmailBundle:EmailTemplate:template.html.twig" %}

{% trans_default_domain 'interface' %}

{% block subject %}
    {% autoescape false %}
    {{ 'email.experience.validation.subject'|trans }}
    {% endautoescape %}
{% endblock %}

{% block mainTitle %}
    {% autoescape false %}
    {{ 'global.experience'|trans }}
    {% endautoescape %}
{% endblock %}

{% block coreTitle %}
    {% autoescape false %}
    {{ 'email.experience.validation.coreTitle'|trans }}
    {% endautoescape %}
{% endblock %}

{% block subTitle %}
    {% autoescape false %}
    {{ 'email.experience.validation.subTitle'|trans({'%user%': experience.getCreator}) }}
    {% endautoescape %}
{% endblock %}

{% block message %}
    {% autoescape false %}
    {{ 'email.experience.validation.message'|trans({'%route%': path('front_experience_view', {'slug': experience.slug})}) }}
    {% endautoescape %}
{% endblock %}
