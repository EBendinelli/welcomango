{% extends "WelcomangoEmailBundle:EmailTemplate:template.html.twig" %}

{% trans_default_domain 'interface' %}

{% block mainTitle %}
    {% autoescape false %}
    {{ 'global.booking'|trans }}
    {% endautoescape %}
{% endblock %}

{% block coreTitle %}
    {% autoescape false %}
    {{ 'email.booking.new.coreTitle'|trans }}
    {% endautoescape %}
{% endblock %}

{% block subTitle %}
    {% autoescape false %}
    {{ 'email.booking.new.subTitle'|trans({'%title%': booking.experience.title, '%name%': booking.user.firstname}) }}
    {% endautoescape %}
{% endblock %}

{% block btn%}
    {% autoescape false %}
        <a style="font-family: 'Open Sans',sans-serif; font-size: 20px;  border-radius:3px; text-decoration: none; margin:auto; color: #fff; background-color: #F34B1F; border-color: #F34B1F; padding: 10px 20px 10px 20px;font-size: 14px; letter-spacing: 0.14px; line-height: 21px; text-transform: uppercase;  font-family: Montserrat; font-weight: 400;" href="{{ url('booking_received_view', {'booking_id': booking.id}) }}" style="">{{ 'email.booking.update.btn'|trans }}</a>
    {% endautoescape %}
{% endblock %}

{% block message %}
    {% autoescape false %}
    {{ 'email.booking.new.message'|trans}}
    {% endautoescape %}
{% endblock %}
