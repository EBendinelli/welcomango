{% trans_default_domain 'email' %}

{% block subject %}
    {% autoescape false %}
    {{ 'email.subject.messageSent'|trans }}
    {% endautoescape %}
{% endblock %}

{% block body_text %}
    {% autoescape false %}
    {{ 'email.message.thanksMessage'|trans({'%user%': name}) }}
    {% endautoescape %}
{% endblock %}

{% block body_html %}
    {% autoescape false %}
    <div>{{ 'email.message.thanksMessage'|trans({'%user%': name}) }}</div>
    {% endautoescape %}
{% endblock %}
