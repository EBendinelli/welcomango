{% trans_default_domain 'email' %}

{% block subject %}
    {% autoescape false %}
    {{ 'email.experience.requestSubject'|trans }}
    {% endautoescape %}
{% endblock %}

{% block body_text %}
    {% autoescape false %}
    {{ 'email.experience.requestMessage'|trans({'%user%': booking.user.fullname, '%title%': booking.experience.title, '%status%': booking.status}) }}
    {% endautoescape %}
{% endblock %}

{% block body_html %}
    {% autoescape false %}
    <div>{{ 'email.experience.requestMessage'|trans({'%user%': booking.user.fullname, '%title%': booking.experience.title, '%status%': booking.status}) }}</div>
    {% endautoescape %}
{% endblock %}
