{% extends "WelcomangoEmailBundle:EmailTemplate:template.html.twig" %}

{% trans_default_domain 'interface' %}

{% block subject %}
    {% autoescape false %}
    {{ 'email.message.subject'|trans }}
    {% endautoescape %}
{% endblock %}

{% block mainTitle %}
    {% autoescape false %}
    {{ 'email.message.title'|trans }}
    {% endautoescape %}
{% endblock %}

{% block coreTitle %}
    {% autoescape false %}
    {{ 'email.message.coreTitle'|trans }}
    {% endautoescape %}
{% endblock %}

{% block subTitle %}
    {% autoescape false %}
    {{ 'email.message.subTitle'|trans({'%user%': name}) }}
    {% endautoescape %}
{% endblock %}

{% block message %}
    {% autoescape false %}
    {{ 'email.message.message'|trans({'%user%': name}) }}
    {% endautoescape %}
{% endblock %}



