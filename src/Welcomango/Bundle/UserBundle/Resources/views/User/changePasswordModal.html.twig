{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form with ["::frontTheme.html.twig"] %}

<div class="modal fade slide-up disable-scroll modal-change-password" tabindex="-1" role="dialog" aria-labelledby="modalSlideUpLabel" aria-hidden="false">
    <div class="modal-dialog ">
        <div class="modal-content-wrapper">
            <div class="modal-content">
                <div class="modal-header clearfix">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="pg-close fs-14"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <h3 class="text-center m-b-20">{{ 'login.password.changeTitle'|trans({}, 'interface') }}</h3>
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                            <div class="hint-text m-b-10 p-l-5">{{ 'login.password.currentHint'|trans({}, 'interface') }}</div>
                            {{ form_row(form.current_password) }}

                            <div class="hint-text m-b-10 m-t-15 p-l-5">{{ 'login.password.passwordHint'|trans({}, 'interface') }}</div>
                            {{ form_widget(form) }}
                            <div>
                                <input type="submit" class="btn btn-complete pull-right m-t-10" value="{{ 'change_password.submit'|trans }}" />
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>