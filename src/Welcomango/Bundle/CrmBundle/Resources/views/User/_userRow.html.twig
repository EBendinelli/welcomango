<tr>
    <td>
        {% include "YproxAdminCrmBundle:User:_userLink.html.twig" %}
    </td>
    <td>
        {% set roles = user.roles|merge(user.company.defaultRoles) %}
        {% for role in roles %}
            {{ display_role_icon(role) }}
        {% endfor %}
    </td>
    <td>
        <strong>{{ user.isPrimary ? 'primary_user'|trans({}, "crm") : '' }}</strong>
    <td>
        {{ user.lastLogin ? user.lastLogin|distance_of_time_in_words() : 'interface.never'|trans({}, 'interface') }}
    </td>
    <td>
        {% if user.enabled %}
            <i title="{{ 'user.active'|trans({}, 'crm') }}" {{ tooltip() }} class="fa fa-check"></i>
        {% else %}
            <i title="{{ 'user.inactive'|trans({}, 'crm') }}" {{ tooltip() }} class="fa fa-times"></i>
        {% endif %}
    </td>
    <td>
        {{ button.edit(path('user_edit', { user_id : user.id }), false, "btn-xs") }}
    </td>
</tr>

