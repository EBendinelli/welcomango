{% verbatim %}
    <script type="text/x-jquery-tmpl" id="modal-template-form">
        <div class="modal fade" id="${id}" tabindex="-1" role="basic" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">${title}</h4>
                    </div>
                    <div class="modal-body">
                        <form method="post" action="${url}" class="modal-inner">
                        </form>
                    </div>
                    <div class="modal-footer actions">
                        <a class="btn btn-default" data-dismiss="modal">${cancelLabel}</button>
                        <a class="btn btn-success submit">
                            <i class="fa fa-save"></i>
                            &nbsp;${saveLabel}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </script>
{% endverbatim %}
