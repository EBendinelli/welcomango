{% extends "::front.html.twig" %}

{% block page_content %}
    <section class="p-b-50 p-t-50 bg-master-lighter sm-no-margin">
        <div class="container p-b-70 p-t-30">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        <i class="fa fa-check veryBigIcon text-info"></i>
                        <h1 class="col-sm-12 p-b-10">{{ title }}</h1>
                        <div class="hint-text">{{ sub_title }}</div>
                        <p class="font-arial m-t-30"><span class="hint-text">{{ message }}</span></p>
                        {# TODO path to replace once the contact and report pages are done #}
                        <a href="{{ button1_path }}" class="btn btn-lg btn-primary btn-cons m-t-20">{{ button1_message }}</a>
                        {% if button2_path is defined %}
                            <a href="{{ button2_path }}" class="btn btn-lg btn-info btn-cons m-t-20">{{ button2_message }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}