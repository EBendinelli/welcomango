<!-- BEGIN FEATURED EXPERIENCES -->
<section class="container-fluid b-t b-white">
    {% for experience in featuredExperiences  %}
    <div class="row">
        <div class="col-md-4 text-center bg-success hover-push demo-story-block">
            <div class="hover-backdrop" style="background:url('assets/images/feature_1.jpg')"></div>
            <div class="hover-caption bottom-left bottom-right p-b-40">
                <h4 class="text-white m-b-25">{{ experience.getTitle }}</h4>
                <h5 class="font-montserrat fs-12 hint-text text-white all-caps">in {{ experience.getCity.Name }} by <a>{{  experience.getAuthor.firstname }}</a></h5>
            </div>
        </div>
    {%  endfor %}
</section>
<!-- END FEATURED EXPERIENCES -->