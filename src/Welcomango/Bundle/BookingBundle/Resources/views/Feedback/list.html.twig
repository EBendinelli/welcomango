{% for feedback in feedbacks %}
    <div class="comment row ">
        <div class="col-md-offset-2 col-md-8 m-b-20 p-b-20 {% if not loop.last %} b-b b-grey {% endif %}">
            <div class="col-md-2 text-center">
                {{ display_avatar(feedback.sender, true, false, 'message-user-picture m-r-10') }}
                <div class="name bold m-t-5 ">{{ feedback.sender.firstname}}</div>
            </div>
            <div class="col-md-10">
                <p>{{ feedback.comment }}</p>

                <span class="hint-text small">{{ feedback.sender.createdAt|date('F jS \\, Y') }}</span>
            </div>
        </div>
    </div>
{% endfor %}