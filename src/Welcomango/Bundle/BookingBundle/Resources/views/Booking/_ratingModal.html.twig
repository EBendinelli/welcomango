<div class="modal fade slide-up disable-scroll modal-rating" tabindex="-1" role="dialog" aria-labelledby="modalSlideUpLabel" aria-hidden="false">
    <div class="modal-dialog ">
        <div class="modal-content-wrapper">
            <div class="modal-content text-center">
                <div class="modal-header clearfix text-center">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <i class="pg-close fs-14"></i>
                    </button>
                    <h5>{{ 'booking.rateAdventure'|trans }}</h5>
                </div>
                <div class="modal-body">
                    <p>
                        {{ 'booking.ratingText'|trans }}
                    <div class="fs-12"><i class="fa fa-exclamation-triangle"></i>{{ 'booking.ratingNote'|trans }}</div>
                    </p>
                    <div id="ratingForm">

                        {{ form_row(form.note) }}
                        {{ form_row(form.body) }}

                    </div>
                    <button type="button" data-dismiss="modal" class="btn btn-info  btn-cons"><i class="fa fa-arrow-left "></i> Cancel</button>
                    <a id="modal-rating-button" href="{{ path('booking_rate', {'booking_id' : booking.id|default('#')}) }}" class="btn btn-complete btn-cons"><i class="fa fa-valid"></i>{{ 'submit'|trans }}</a>
                </div>

            </div>
        </div>
    </div>
</div>
