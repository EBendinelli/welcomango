{% extends "::admin.html.twig" %}

{% trans_default_domain "booking" %}

{% set listing = path('admin_booking_list') %}
{% form_theme form with ["::theme.html.twig"] %}

{% block page_content %}
    {{ include("WelcomangoBookingBundle:AdminBooking:form.html.twig", {'save_path': path('admin_booking_edit', {'booking_id' : form.vars.value.id })}) }}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('select').select2();
    </script>

    <script>
        $(document).ready(function() {
            $('#participationForm').validate();
        });
    </script>
{% endblock %}
