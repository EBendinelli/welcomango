{% extends "WelcomangoCoreBundle:AdminCRUD:index.html.twig" %}

{% trans_default_domain "crm" %}

{% block actions %}
    {{ button.create(path('admin_booking_create'), 'booking.create'|trans) }}
{% endblock %}

{% set pager_url = path('admin_booking_list') %}
{% set number_per_page = false %}
