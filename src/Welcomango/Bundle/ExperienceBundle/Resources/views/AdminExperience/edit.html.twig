{% extends "::admin.html.twig" %}

{% trans_default_domain "experience" %}

{% set listing = path('admin_experience_list') %}
{% form_theme form with ["::theme.html.twig"] %}

{% block page_content %}
    {{ include("WelcomangoExperienceBundle:AdminExperience:form.html.twig", {'save_path': path('admin_experience_edit', {'experience_id' : form.vars.value.id })}) }}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('select').select2();
    </script>

    <script>
        $(document).ready(function() {
            $('#experienceForm').validate();
        });
    </script>
{% endblock %}
