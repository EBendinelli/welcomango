{% extends "::admin.html.twig" %}

{% trans_default_domain "experience" %}

{% set listing = path('front_experience_list') %}
{% form_theme form with ["::theme.html.twig"] %}

{% block page_content %}
    {{ include("WelcomangoExperienceBundle:Experience:form.html.twig", {'path': path('front_experience_create')}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ form_stylesheet(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $('select').select2();
    </script>

    <script>
        $(document).ready(function() {
            $('#experienceForm').validate();
        });
    </script>
{% endblock %}
