<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="welcomango.front.form.participation.type" class="Welcomango\Bundle\Front\ExperienceBundle\Form\Type\ParticipationType">
            <argument type="service" id="security.context" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="welcomango.front.participation.manager" class="Welcomango\Bundle\Front\ExperienceBundle\Manager\ParticipationManager">
        </service>

        <service id="welcomango.front.experience.manager" class="Welcomango\Bundle\Front\ExperienceBundle\Manager\ExperienceManager">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="security.access.post_voter" class="Welcomango\Bundle\Front\ExperienceBundle\Security\Voter\ExperienceVoter" public="false" >
            <tag name="security.voter" />
        </service>

        <service id="welcomango.front.form.user.type" class="Welcomango\Bundle\Front\CrmBundle\Form\Type\UserType">
            <argument type="service" id="security.context" />
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

    </services>
</container>
