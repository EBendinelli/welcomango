<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="welcomango.form.participation.type" class="Welcomango\Bundle\ParticipationBundle\Form\Type\ParticipationType">
            <argument type="service" id="security.context"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="participation.date_difference" class="Welcomango\Bundle\ParticipationBundle\Twig\DateDifferenceExtension">
            <tag name="twig.extension"/>
        </service>

        <service id="participation.request_action" class="Welcomango\Bundle\ParticipationBundle\Twig\RequestActionExtension">
            <tag name="twig.extension"/>
            <argument type="service" id="router"/>
        </service>

        <service id="welcomango.front.participation.manager" class="Welcomango\Bundle\ParticipationBundle\Manager\ParticipationManager">
        </service>
    </services>

</container>
